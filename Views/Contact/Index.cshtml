@model IEnumerable<CompanyPhonebook.Models.Contact>
@{
    ViewData["Title"] = "Contacts";
}


<h2>Contacts</h2>

<form asp-action="Index" method="get">
    <div class="form-group">
        <input type="text" name="searchQuery" value="@ViewData["SearchQuery"]" placeholder="Search by name or phone number" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.Name</td>
                <td>@contact.PhoneNumber</td>
                <td>@contact.User?.FirstName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@contact.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@contact.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@contact.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New</a>
