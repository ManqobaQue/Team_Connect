@model CompanyPhonebook.Models.DepartmentViewModel

@{
    ViewData["Title"] = "Departments";
}

<h1 class="display-4">Departments</h1>

<!-- 🔍 Search Form -->
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchQuery" class="form-control" placeholder="Search departments..."
               value="@Model.SearchQuery" aria-label="Search Departments">
        <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Search</button>
    </div>

    <!-- Create and Dashboard Buttons -->
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-success ms-2">➕ Create Department</a>
    }
    <a asp-action="Index" asp-controller="Dashboard" class="btn btn-primary ms-2">🏠 Dashboard</a>
</form>

