@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row align-items-center hero-section mx-auto">
        <div class="col-md-6 text-center text-md-start">
            <h1 class="display-4 fw-bold text-primary mb-3">Welcome to <span style="color:#007bff;">Team Connect</span></h1>
            <p class="lead text-secondary mb-4">Your ultimate company phonebook for seamless team collaboration and stronger connections.</p>
            <h2 class="lead text-dark">Communication made easy! <span class="welcome-heart">❤️</span></h2>

            <div class="mt-4">
                <a class="btn btn-primary btn-lg me-3" asp-controller="User" asp-action="Index" aria-label="View Employees">
                    <i class="bi bi-people me-2"></i>View Employees
                </a>
                <a class="btn btn-outline-primary btn-lg btn-hover" asp-controller="Department" asp-action="Index" aria-label="View Departments">
                    <i class="bi bi-building me-2"></i>View Departments
                </a>
                <a class="btn btn-primary btn-lg" asp-controller="Dashboard" asp-action="Index" aria-label="Dashboard">
                    <i class="bi bi-bar-chart me-2"></i>Dashboard
                </a>
            </div>
@* 
            <div class="row mt-4">
                <div class="col-12 d-flex justify-content-around align-content-xl-center">
                    <a class="btn btn-primary btn-lg" asp-controller="Dashboard" asp-action="Index" aria-label="Dashboard">
                        <i class="bi bi-bar-chart me-2"></i>Dashboard
                    </a>
                </div>
            </div> *@

        </div>
        <div class="col-md-6 d-none d-md-block">
            <img src="https://betsoftware.com/images/hero/home-01.webp"
                 class="img-fluid rounded shadow-lg"
                 alt="Team Collaboration Image"
                 style="border-radius: 20px; box-shadow: 0 10px 40px rgba(0,0,0,0.1);">
        </div>
    </div>
</div>

<div class="container text-center mt-5 text-white">
    <h3 class="fw-bold mb-4">Why Use Team Connect?</h3>
    <div class="row">
        <div class="col-md-4 mb-4 text-white">
            <i class="bi bi-search fs-1 text-primary mb-3 feature-icon"></i>
            <h5 class="mt-3">Quick Search</h5>
            <p class="text-white">Find employees and departments instantly.</p>
        </div>
        <div class="col-md-4 mb-4 text-white">
            <i class="bi bi-bar-chart fs-1 text-success mb-3 feature-icon"></i>
            <h5 class="mt-3">Dashboard Insights</h5>
            <p class="text-white">View employee statistics and department summaries.</p>
        </div>
        <div class="col-md-4 mb-4 text-white">
            <i class="bi bi-shield-check fs-1 text-warning mb-3 feature-icon"></i>
            <h5 class="mt-3">Secure & Reliable</h5>
            <p class="text-white">Access company contacts safely with role-based access.</p>
        </div>
    </div>
</div>

<div class="container text-center mt-5 mb-5 text-white">
    <blockquote class="blockquote fs-5 fst-italic">
        “Team Connect transformed how we communicate — now everyone feels closer, even when remote.”
        <footer class="blockquote-footer mt-2">Manqoba Mavimbela <cite title="Company CEO">CEO, BET Software</cite></footer>
    </blockquote>
</div>

@section Styles {
    <style>
        body {
            background: url('https://betsoftware.com/images/home/SectionTech.png') no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            padding: 0;
            font-family: 'Gotham', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .hero-section {
            background: #ffffffcc; /* semi-transparent white */
            border-radius: 15px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.1);
            padding: 3rem;
            transition: transform 0.3s ease;
        }

            .hero-section:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 40px rgba(0,0,0,0.15);
            }

        .btn-hover:hover {
            background-color: #0069d9 !important;
            color: #fff !important;
            box-shadow: 0 4px 12px rgba(0, 105, 217, 0.6);
            transition: all 0.3s ease;
        }

        .feature-icon {
            transition: transform 0.3s ease;
        }

            .feature-icon:hover {
                transform: scale(1.2);
                color: #0d6efd;
            }

        .welcome-heart {
            font-size: 2rem;
            color: #ff4d6d;
            animation: pulse 2s infinite;
            display: inline-block;
            vertical-align: middle;
            margin-left: 0.5rem;
        }

        @@keyframes pulse {
            0%, 100%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.3);
        }

        }
    </style>
}
