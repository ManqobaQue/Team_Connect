@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <p class="lead">
                This Privacy Policy describes how <strong>BET Software</strong> (referred to as "we," "us," or "our") collects, uses,
                and protects the personal information of employees and authorized users of the web application <strong>TeamConnect</strong>.
            </p>
        </div>
    </div>
    <!-- Information We Collect -->
    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h2 class="card-title">Information We Collect</h2>
            <p class="card-text">We collect the following employee information:</p>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">📛 Name</li>
                <li class="list-group-item">💼 Job Title/Position</li>
                <li class="list-group-item">🏢 Department</li>
                <li class="list-group-item">📞 Work Phone Number(s)</li>
                <li class="list-group-item">📧 Work Email Address</li>
                <li class="list-group-item">🏠 Office Location/Building</li>
            </ul>
        </div>
    </div>
</div>

