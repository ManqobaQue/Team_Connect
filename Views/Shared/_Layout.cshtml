<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Team Connect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CompanyPhonebook.styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body style="background: url('https://betsoftware.com/images/home/SectionTech.png') no-repeat center center fixed; background-size: cover;">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://betsoftware.com/images/logo.png" alt="Company Logo" height="40" class="me-2">
                    <span class="fw-bold text-primary">Team Connect</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">

                        @* @if (User.Identity?.IsAuthenticated == true)
                        { *@

                            <li class="nav-item">
                                <a class="nav-link text-white-50" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white-50" asp-controller="User" asp-action="Index">Employees</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white-50" asp-controller="Department" asp-action="Index">Departments</a>
                            </li>

                            @* @if(User.IsInRole("Admin"))
                            { *@
                                <li class="nav-item">
                                    <a class="nav-link text-white-50" asp-controller="Role" asp-action="AssignRole">Assign Roles</a>
                                </li>


                                <li class="nav-item">
                                    <a class="nav-link text-white-50" asp-controller="AdminLog" asp-action="Index">Admin Logs</a>
                                </li>
                            @* } *@
                           
                        }

                        @* Migth be useful in the future 
                            <li class="nav-item">
                            <a class="nav-link text-white-50" asp-controller="Home" asp-action="Index">Home</a>
                        </li> 
                        <li class="nav-item">
                            <a class="nav-link text-white-50" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>*@

                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                    <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                    
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
            </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white py-4 position-absolute bottom-0 w-100" >
        <div class="container text-center">
            <p class="mb-1">&copy; 2025 - Team Connect. All rights reserved.</p>
        </div>
    </footer>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
