<!-- CSS for Floating Buttons -->
<style>
    .fab {
        position: fixed;
        right: 20px;
        z-index: 1000;
        padding: 12px 20px;
        border-radius: 50px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease-in-out;
    }

        .fab:hover {
            transform: scale(1.1);
        }

    .create-btn {
        bottom: 80px;
        background-color: #28a745;
        color: white;
    }

    .back-btn {
        bottom: 20px;
        background-color: #007bff;
        color: white;
    }
</style>

